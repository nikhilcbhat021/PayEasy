{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "globalEnv": ["DATABASE_URL", "WEB_HOOK_PORT", "AUTH_SECRET", "AUTH_TRUST_HOST", "JWT_SECRET", "CUSTOM_NAME__AUTH_GOOGLE_ID", "CUSTOM_NAME__AUTH_GOOGLE_SECRET", "ALLOWED_METHODS", "ALLOWED_ORIGIN", "ALLOWED_HEADERS", "EXPOSED_HEADERS", "MAX_AGE", "CREDENTIALS", "DOMAIN_URL"],
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true 
    },
    "db:deploy": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["AUTH_SECRET", "JWT_SECRET", "ALLOWED_METHODS", "ALLOWED_ORIGIN", "ALLOWED_HEADERS", "EXPOSED_HEADERS", "MAX_AGE", "CREDENTIALS", "DOMAIN_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
